"All files
autocmd BufEnter * call RemoveRedundantSpace()
if !&diff
  autocmd BufEnter * nested :call tagbar#autoopen(0)
endif
"autocmd BufWritePre * :%s/\s\+$//e
" http://vim.wikia.com/wiki/Auto-save_current_buffer_periodically
au BufRead,BufNewFile * let b:start_time=localtime()
au CursorHold * call UpdateFile()
au BufWritePre * let b:start_time=localtime()

function! RemoveRedundantSpace()
  if &modifiable > 0
    "remove trailing whitespace after lines
    :%s/\s\+$//e
  endif
endfunction

" :he autosave will fix this someday hopefully
" http://vim.wikia.com/wiki/Auto-save_current_buffer_periodically
" only write if needed and update the start time after the save
function! UpdateFile()
  if exists("b:start_time") && &modifiable > 0 && ((localtime() - b:start_time) >= 2)
    update
    :SyntasticCheck
    let b:start_time=localtime()
  endif
endfunction

"intelligently decide whether to insert
"a tab or a completed word
function! InsertTabWrapper(direction)
   let col = col('.') - 1
   if !col || getline('.')[col - 1] !~ '\k'
   return "\<tab>"
   elseif "backward" == a:direction
   return "\<c-p>"
   else
   return "\<c-n>"
   endif
endfunction

inoremap <tab> <c-r>=InsertTabWrapper ("forward")<cr>
inoremap <s-tab> <c-r>=InsertTabWrapper ("backward")<cr>

